#!/usr/bin/env bash

CHIMERA_REMOTE="$(dig +short chimera)"
if [[ "${CHIMERA_REMOTE}" == "" ]]; then
	export CHIMERA_REMOTE="chimera.mickens.io"
fi

REMOTE_UID=1000
LOCAL_UID=1000
ssh -A -p 222 -o "ExitOnForwardFailure=yes" -o "RemoteForward /run/user/$REMOTE_UID/gnupg/S.gpg-agent /run/user/$LOCAL_UID/gnupg/S.gpg-agent.extra" "${CHIMERA_REMOTE}"

