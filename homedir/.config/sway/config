  colors {
    separator #AAAAAA
    background #222133
    statusline #FFFFFF
    focused_workspace #664477 #664477 #cccccc
    active_workspace #DCCD69 #DCCD69 #181715
    inactive_workspace #222133 #222133 #AAAAAA
    urgent_workspace #CE4045 #CE4045 #FFFFFF
  }
}

