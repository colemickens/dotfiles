# VARIABLES
set $mod Mod4
set $purple #551E69
set $purple1 551E69
set $bgcolor #000000
set $bgcolor1 000000

# REPEATED COMMANDS
set $swaylock swaylock -c 000000 --indicator-radius 300 --indicator-thickness 20

set $redshift workspace 9; exec termite -e "bash -lic '_redshift'"; workspace back_and_forth
set $colorbg workspace 9; exec termite -e "bash -lic '_colorbg'"; workspace back_and_forth

# and on demand
bindsym $mod+Shift+r $redshift
bindsym $mod+Shift+t $colorbg
#bindsym $mod+Shift+i $inhibit # TODO
bindsym $mod+Alt+0 border toggle
bindsym $mod+Alt+plus gaps inner current plus 1
bindsym $mod+Alt+minus gaps inner current minus 1

# APPEARANCE
gaps inner 1
gaps outer 1
default_border normal 8
# default:
# client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
client.focused          $purple $purple #ffffff #2e9ef4   $purple
# Logo key. Use Mod1 for Alt.
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
#set $term termite
set $term /home/cole/way.sh termite
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
set $menu dmenu_path | dmenu | xargs swaymsg exec

