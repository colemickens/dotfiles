# APPEARANCE
gaps inner 5
gaps outer 5
default_border pixel 10

# defaults:
#                          border    bg        text      indicator child_border
#  client.background       n/a       #ffffff   n/a       n/a       n/a
#  client.focused          #4c7899   #285577   #ffffff   #2e9ef4   #285577
#  client.focused_inactive #333333   #5f676a   #ffffff   #484e50   #5f676a
#  client.unfocused        #333333   #222222   #888888   #292d2e   #222222
#  client.urgent           #2f343a   #900000   #ffffff   #900000   #900000
#  client.placeholder      #000000   #0c0c0c   #ffffff   #000000   #0c0c0c
set $active   #ffffff88
set $activebr #ffffffbb
set $inactive #00000055
set $inactibr #000000bb
client.focused             $active   $active   #000000   $activebr $active
client.focused_inactive    $inactive $inactive #88888844 $inactibr $inactive
client.unfocused           $inactive $inactive #88888844 $inactibr $inactive

