  font $font
  #font Overpass Mono 9
  position top
  status_command /run/current-system/sw/bin/i3status-rs $HOME/.config/i3/status.toml
}


## Core Keybindings
# alt-tab
bindsym $mod+tab workspace next
bindsym $mod+shift+tab workspace prev

# menu
bindsym $mod+escape exec /home/cole/.config/sway/menu-termite.sh
bindsym $mod+Shift+escape exec /home/cole/.config/sway/menu-termite.sh x11
for_window [app_id="^launcher$"] floating enable, border pixel 10

###############################################################################
# dynamic output scaling
bindsym $mod+Ctrl+Alt+equal exec /home/cole/.config/sway/curoutput.sh up
bindsym $mod+Ctrl+Alt+minus exec /home/cole/.config/sway/curoutput.sh down
bindsym $mod+Ctrl+Alt+End exec /home/cole/.config/sway/curoutput.sh off
bindsym $mod+Ctrl+Alt+Home output * enable
###############################################################################


bindsym $mod+F1 exec termite --name=launcher -e "bash -c '/home/cole/.config/sway/gopass-helper.sh show -o | xargs -r -0 swaymsg -t command exec wl-copy'"
bindsym $mod+F2 exec termite --name=launcher -e "bash -c '/home/cole/.config/sway/gopass-helper.sh totp | xargs -r -0 swaymsg -t command exec wl-copy'"

#bindsym $mod+F1 exec termite --name=launcher -e "bash -c \\"gopass ls --flat | fzf --no-extended | xargs --no-run-if-empty gopass show | head -n1 | xargs -r swaymsg -t command exec wl-copy\\""
#bindsym $mod+F2 exec termite --name=launcher -e "bash -c \\"gopass ls --flat | fzf --no-extended | xargs --no-run-if-empty gopass totp | head -n1 | cut -d' ' -f1 | xargs -r swaymsg -t command exec wl-copy\\""


# manual lock
bindsym $mod+Delete exec "$swaylock"
# disable laptop screen
bindsym --locked $mod+End output eDP-1 disable
# terminal
### TRY OUT OTHER TERM EMUS?
bindsym $mod+Return exec termite
#bindsym $mod+Return exec alacritty

# browser
bindsym $mod+Shift+Return exec GDK_BACKEND=wayland firefox -P default-nightly
# browser
bindsym $mod+Shift+Alt+Return exec GDK_BACKEND=x11 google-chrome-unstable
# vscode
bindsym $mod+Shift+Backspace exec GDK_BACKEND=x11 vscodium
# force kill
bindsym $mod+Shift+q kill
# reload config
bindsym $mod+Shift+c reload
# quit sway
bindsym $mod+Ctrl+Alt+Delete exit
# can't wait til this Firefox bug turns a decade old, FFS
bindsym Ctrl+q exec echo "ugh, mozilla"


